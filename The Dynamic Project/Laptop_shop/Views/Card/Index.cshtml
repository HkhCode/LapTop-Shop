@model Laptop_shop.ViewModels.Pages.CardViewModel;
@{
    Layout = "~/Views/Shared/_UserSide.cshtml";
}

<div class="card p-3">
    <h5 class="card-title text-center">
        سبد خرید
    </h5>
    @if(Model.Products == null)
    {
        <div class="alert alert-primary text-center" role="alert">
            سبد شما خالی است!
        </div>
    }
    else
    {
            <table class="table table-striped">
        <thead>
            <tr>
                <th>شماره</th>
                <th>عنوان</th>
                <th>قیمت</th>
                <th>مشاهده</th>
                <th>حذف از سبد خرید</th>
            </tr>
        </thead>
        <tbody>
            @{
                    @for(int i = 0; i< Model.Products.Count;i++)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@Model.Products[i].Title</td>
                            <td>@Model.Products[i].Price تومان</td>
                            <td>@Html.ActionLink("مشاهده محصول" , "Index" , "Product" , Model.Products[i].Id , new {@class = "btn btn-primary"})</td>
                            <td>@Html.ActionLink("حذف از سبد خرید" , "DeleteProduct" , "Card" , Model.Products[i].Id, new {@class = "btn btn-primary"} )</td>
                        </tr>
                    }

            }
            <tr>
                <td>مجموع</td>
                <td>@Model.FullPrice تومان</td>
            </tr>
        </tbody>
    </table>
    <button class="btn btn-success my-2 w-auto">پرداخت و تکمیل خرید</button>
    }

</div>