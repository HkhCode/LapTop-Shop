@model Laptop_shop.ViewModels.Pages.ProductCategoriesViewModel;
@{
    Layout = "~/Views/Shared/_UserSide.cshtml";
}

<div class="card py-3 px-2">
    <h5 class="card-title py-2 text-center">@Model.CategoryTitle</h5>
    @{
        foreach(var p in Model.products)
        {
            <div class="card mb-3 w-100">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src=@p.Image class="img-fluid rounded-start" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">@p.Title</h5>
                            <p class="card-text">
                                @p.Description
                            </p>
                            <p class="card-text">
                                <small class="text-body-secondary">
                                    @Html.ActionLink("مشاهده" , "Index" , "Product" , p.Id , new {@class = "btn btn-primary"})
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>