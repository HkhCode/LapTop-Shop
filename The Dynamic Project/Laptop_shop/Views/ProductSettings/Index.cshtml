@model Laptop_shop.ViewModels.Pages.ProductSettingsViewModel;
@{
    Layout = "~/Views/Shared/_AdminSide.cshtml";
}

<div class="card p-2 my-3">
    <h5 class="card-title text-center">
        لیست محصولات
    </h5>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    شماره
                </th>
                <th>
                    عنوان
                </th>
                <th>ویرایش</th>
                <th>حذف</th>
            </tr>
        </thead>
        <tbody>
            @{
                for(int i =0;i<Model.products.Count();i++)
                {
                    <tr>
                        <td>@i++</td>
                        <td>@Model.Title</td>
                        <td>@Html.ActionLink("ویرایش" , "AddProduct" , "Product" , Model.products[i].Id , new {@class = "btn btn-primary"})</td>
                        <td>@Html.ActionLink("حذف" , "DeleteProduct" , "Product" , Model.products[i].Id , new {@class = "btn btn-primary"})</td>
                    </tr>
                }
            }
        </tbody>
    </table>
    @Html.ActionLink("افزودن محصول" , "AddProduct" , "Product" , null , new {@class = "btn btn-success"})
</div>